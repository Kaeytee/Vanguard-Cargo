# Example environment variables for Vanguard Cargo
# Copy this file to .env and fill in your actual values

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Feature Flags
VITE_AUTH_ENABLED=true
VITE_MOCK_DATA_ENABLED=false

# reCAPTCHA Configuration
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# Mapbox API Configuration (for address autocomplete and mapping)
VITE_MAPBOX_TOKEN=your_mapbox_access_token_here

# Development Settings
VITE_DEBUG_MODE=false
VERSION=1.0.0

# Feature Toggles
REACT_APP_USE_MOCK_DATA=false
REACT_APP_DEBUG=false
# Get these values from https://www.google.com/recaptcha/admin
REACT_APP_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
REACT_APP_ENABLE_RECAPTCHA=true

# ============================================================================
# Trustpilot Integration
# ============================================================================
# Get these from: https://business.trustpilot.com > Settings > Integrations > TrustBox

# Your Trustpilot Business Unit ID (found in Trustpilot Business dashboard)
# Example: 68f141bf4d60358202835d95
VITE_TRUSTPILOT_BUSINESS_UNIT_ID=your_trustpilot_business_unit_id_here

# Enable or disable Trustpilot integration (true/false)
VITE_TRUSTPILOT_ENABLED=true

# Review Collector Token (for collecting reviews directly on your site)
# Found in: Trustpilot Business > TrustBox > Review Collector
# Example: e58a2d5dd-c9a7-44a8-84e9-cabc9c8b8d8b
VITE_TRUSTPILOT_REVIEW_COLLECTOR_TOKEN=your_review_collector_token_here
